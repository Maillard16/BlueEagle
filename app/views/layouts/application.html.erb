                        <%= link_to "Enregistrez-vous", new_user_registration_path %>     
                     <% end %> 
                  </li>
               </ul>
            </div>
         </div>
      </div>
   </nav>
 
   <div class="container" role="main">
      <div class="row">
         <div class="col-md-3 links">
            <h3>Ressources</h3>
            <ul>							
							  <% if can? :menu_admin, @user %> 
                  <li>
                     <%= link_to 'Utilisateurs', users_path() %>		 
                  </li>
									<li>
										 <%= link_to 'Gestion ordinateurs', ordinateurs_path() %>
                  </li>
                  <li>
										 <%= link_to 'Donner ordinateurs', donner_ordinateurs_path() %>
                  </li>
									<li>
										<%= link_to 'Rendez-vous', rendez_vous_path() %>
									</li>
									<li>
										<%= link_to 'Bénéficiaires', beneficiaires_path() %>
									</li>
									<li>
									 <%= link_to 'Entreprises', entreprises_path() %>
									</li>
									<li>
											<%= link_to 'Employés', employes_path() %>
									</li>
                <% end %> 
							<% if (@entreprise != nil) %>
                  <li>
										 <%= link_to 'Suivi ordinateurs', index_ordinateurs_entreprise_path() %>
                  </li>
							<% end %>
              <% if (@employe != nil) %>
                  <li>
										 <%= link_to 'Gestion ordinateurs', ordinateurs_path() %>
                  </li>
                  <li>
										 <%= link_to 'Donner ordinateurs', donner_ordinateurs_path() %>
                  </li>
							<% end %>
              <% if (@organisme != nil) %>
                  <li>
