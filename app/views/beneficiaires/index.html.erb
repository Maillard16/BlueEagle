<p id="notice"><%= notice %></p>

<h1>Bénéficiaires</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Téléphone</th>
      <th>Adresse</th>
      <th>Organisme</th>
      <th>Priorité</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beneficiaires.each do |beneficiaire| %>
      <tr>
        <td><%= beneficiaire.prenom %></td>
        <td><%= beneficiaire.nom %></td>
        <td><%= beneficiaire.telephone %></td>
        <td><%= beneficiaire.adresse %></td>
        <td><%= Organisme.find(beneficiaire.organisme_id).nom %></td>
        <td><%= beneficiaire.priorite_beneficiaire_id %></td>
        <td><%= link_to 'Voir', beneficiaire %></td>
        <td><%= link_to 'Editer', edit_beneficiaire_path(beneficiaire) %></td>
        <td><%= link_to 'Effacer', beneficiaire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un bénéficiaire', new_beneficiaire_path, class: 'btn btn-info' %>
