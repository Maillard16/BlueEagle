<p id="notice"><%= notice %></p>

<h1>Employés</h1>

<table class="table table-hover">
  <thead>
    <tr>
			<th>Id user</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employes.each do |employe| %>
      <tr>
				<td><%= employe.user_id %></td>
        <td><%= employe.prenom %></td>
        <td><%= employe.nom %></td>
        <td><%= link_to 'Voir', employe %></td>
        <td><%= link_to 'Editer', edit_employe_path(employe) %></td>
        <td><%= link_to 'Effacer', employe, method: :delete, data: { confirm: 'Vous êtes sûr' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un employé', new_employe_path, class: 'btn btn-info' %>
