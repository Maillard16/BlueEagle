<p id="notice"><%= notice %></p>

<h1>Listing Entreprises</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Telephone</th>
      <th>Adresse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entreprises.each do |entreprise| %>
      <tr>
        <td><%= entreprise.nom %></td>
        <td><%= entreprise.telephone %></td>
        <td><%= entreprise.adresse %></td>
        <td><%= link_to 'Show', entreprise %></td>
        <td><%= link_to 'Edit', edit_entreprise_path(entreprise) %></td>
        <td><%= link_to 'Destroy', entreprise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

