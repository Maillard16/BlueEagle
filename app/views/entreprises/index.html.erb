<p id="notice"><%= notice %></p>

<h1>Entreprises</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id user</th>
			<th>Nom</th>
      <th>Téléphone</th>
      <th>Adresse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entreprises.each do |entreprise| %>
      <tr>
				<td><%= entreprise.user_id %></td>
        <td><%= entreprise.nom %></td>
        <td><%= entreprise.telephone %></td>
        <td><%= entreprise.adresse %></td>
        <td><%= link_to 'Voir', entreprise %></td>
        <td><%= link_to 'Editer', edit_entreprise_path(entreprise) %></td>
        <td><%= link_to 'Effacer', entreprise, method: :delete, data: { confirm: 'Etes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une entreprise', new_entreprise_path, class: 'btn btn-info' %>
