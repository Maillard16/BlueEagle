<p id="notice"><%= notice %></p>

<h1>Utilisateurs</h1>

<table class="table table-hover">
  <thead>
    <tr>
			<th>Id</th>
      <th>Username</th>
      <th>Rôle(s)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
				<td><%= user.username %></td>
        <td><%= user.roles_as_text %></td>
        <td><%= link_to 'Voir', user %></td>
        <td><%= link_to 'Editer', edit_user_path(user) %></td>
        <td><%= link_to 'Editer le rôle', edit_roles_user_path(user) %></td> 
        <td><%= link_to 'Effacer', user, method: :delete, data: { confirm: 'Etes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

